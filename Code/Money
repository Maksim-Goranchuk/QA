import matplotlib.pyplot as plt

# Создаем пустой словарь для хранения данных о расходах
расходы = {}

# Функция для добавления расходов
def добавить_расход(категория, сумма):
    if категория in расходы:
        расходы[категория] += сумма
    else:
        расходы[категория] = сумма

# Функция для построения круговой диаграммы
def построить_график():
    категории = расходы.keys()
    суммы = расходы.values() 
    
    plt.pie(суммы, labels=категории, autopct='%1.1f%%')
    plt.title('Расходы по категориям')
    plt.axis('equal')  # Сделать диаграмму круговой
    plt.show()

# Основной цикл программы
while True:
    print("Выберите действие:")
    print("1. Добавить расход")
    print("2. Показать график")
    print("3. Выйти")

    выбор = input()
    
    if выбор == '1':
        категория = input("Введите категорию расхода: ")
        сумма = float(input("Введите сумму расхода: "))
        добавить_расход(категория, сумма)
        print("Расход добавлен.")
    elif выбор == '2':
        построить_график()
    elif выбор == '3':
        break
    else:
        print("Неверный выбор. Пожалуйста, выберите действие 1, 2 или 3.")
        